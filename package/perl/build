tar xf perl-5.24.3.tar.gz
cd perl-5.24.3
patch -Np1 <"$here"/0001-Adapt-Configure-to-GCC-version-10.patch
patch -Np1 <"$here"/0002-no-sys-dirs.patch
pwd=$(type -P pwd)
tmp=$(mktemp)
awk -v pwd="$pwd" '{ gsub("/bin/pwd", pwd) }' \
    dist/PathTools/Cwd.pm >"$tmp"
mv "$tmp" dist/PathTools/Cwd.pm
./Configure -des -Dprefix="$out"
make -j"$EGG_JOBS"
make install
