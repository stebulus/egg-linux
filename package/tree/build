mkdir -p "$out"/boot/grub
cat <<EOF >"$out"/boot/grub/grub.cfg
set timeout=3
menuentry Linux {
  set root=(hd0,gpt2)
  linux /boot/vmlinuz init=/bin/bash root=0812
}
EOF

cpuw() {
  mkdir -p "${@: -1:1}"
  cp -a "$@"
  find "${@: -1:1}" -type d -exec chmod u+w {} +
  rm -rf "$out"/usr/share/info
}

cpuw "$linux"/* "$out"
cpuw "$bash"/bin/bash "$out"/bin
ln -s bash "$out"/bin/sh
cpuw "$binutils"/* "$out"
cpuw "$coreutils"/* "$out"
cpuw "$cross_toolchain"/x86_64-egg-linux-gnu/sysroot/* "$out"
cpuw "$findutils"/* "$out"
cpuw "$gcc"/* "$out"
cpuw "$grep"/* "$out"
cpuw "$gzip"/* "$out"
cpuw "$mount"/* "$out"
cpuw "$sed"/* "$out"
cpuw "$tar"/* "$out"

mkdir -p "$out"/usr/src/egg
cp -aL "$here"/../../{build,hatch,package,README} \
  "$out"/usr/src/egg

mkdir -p "$out"/dev
mkdir -p "$out"/proc
mkdir -p "$out"/tmp
