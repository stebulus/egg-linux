mkdir -p "$out"/boot/grub
cat <<EOF >"$out"/boot/grub/grub.cfg
set timeout=3
menuentry Linux {
  set root=(cd)
  linux /boot/vmlinuz console=ttyS0 init=/bin/bash root=0b00
}
EOF

cpuw() {
  mkdir -p "${@: -1:1}"
  cp -a "$@"
  find "${@: -1:1}" -type d -execdir chmod u+w {} +
  rm -rf "$out"/usr/share/info
}

cpuw "$linux"/* "$out"
cpuw "$static_bash"/bin/bash "$out"/bin
ln -s bash "$out"/bin/sh
cpuw "$binutils"/* "$out"
cpuw "$coreutils"/* "$out"
cpuw "$cross"/x86_64-egg0-linux-gnu/sysroot/* "$out"
cpuw "$findutils"/* "$out"
cpuw "$gcc"/* "$out"
cpuw "$grep"/* "$out"
cpuw "$gzip"/* "$out"
cpuw "$sed"/* "$out"
cpuw "$tar"/* "$out"

mkdir -p "$out"/usr/src/egg
cp -Lr "$here"/../../{build,hatch,package,packages,README} \
  "$out"/usr/src/egg
