awk -v here="$here" \
  -v out="$out" \
  -v patches="$crosstool_ng/patches" \
  -v src="$crosstool_ng/src" \
  '{
    gsub("@HERE@", here)
    gsub("@OUT@", out)
    gsub("@PATCHES@", patches)
    gsub("@SRC@", src)
    print
  }' \
  "$here"/config >.config
unset CPATH
unset LD_LIBRARY_PATH
unset LIBRARY_PATH
ct-ng oldconfig
echo "CT_ALLOW_BUILD_AS_ROOT_SURE=y" >>.config
ct-ng build."$EGG_JOBS"
rmrm() {
  for f in "$@"; do
    d=$(dirname "$f")
    chmod u+w "$d"
    rm -f "$f"
  done
}
# mtrace captures path to perl on build machine
rmrm "$out"/x86_64-egg0-linux-gnu/sysroot/usr/bin/mtrace
# *-gdb.py include made-up path to python
rmrm "$out"/x86_64-egg0-linux-gnu/sysroot/lib/libstdc++.so.6.0.22-gdb.py
rmrm "$out"/x86_64-egg0-linux-gnu/lib64/libstdc++.so.6.0.22-gdb.py
