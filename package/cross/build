awk -v here="$here" \
  -v out="$out" \
  -v patches="$crosstool_ng/patches" \
  -v src="$crosstool_ng/src" \
  '{
    gsub("@HERE@", here)
    gsub("@OUT@", out)
    gsub("@PATCHES@", patches)
    gsub("@SRC@", src)
    print
  }' \
  "$here"/config >.config
unset CPATH
unset LD_LIBRARY_PATH
unset LIBRARY_PATH
ct-ng oldconfig
ct-ng build."$EGG_JOBS"
# mtrace captures path to perl on build machine
rm "$out"/x86_64-egg0-linux-gnu/sysroot/usr/bin/mtrace
