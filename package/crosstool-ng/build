tar xf "$here"/crosstool-ng-1.23.0.tar.xz
cd crosstool-ng-1.23.0
export CPATH=$CPATH:"$ncurses"/include/ncurses
./configure --prefix="$out"
make
make install
ln -s \
  "$bzip2"/bin/bzip2 \
  "$file"/bin/file \
  "$m4"/bin/m4 \
  "$perl"/bin/perl \
  "$which"/bin/which \
  "$out"/bin
mkdir "$out"/src
ln -s "$toolchain_src"/* "$out"/src
